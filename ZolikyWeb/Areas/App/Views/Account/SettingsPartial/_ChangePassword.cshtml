@using DataAccess
@using ZolikyWeb.Tools
@model ZolikyWeb.Areas.App.Models.Account.ChangePasswordModel

<h4 class="card-title">Změna hesla</h4>
@using (Html.BeginForm("ChangePassword", "Account", new {Area = "App"}, FormMethod.Post, new {@class = "floating-labels mt-4"})) {
	@Html.AntiForgeryToken()
	@Html.SecureHiddenFor(x => x.CurrentUserGuid)
	@Html.Hidden("username", this.User.Identity.GetEmail(), new {autocomplete = "username", id = "unameChangePwd" })
	<div class="form-group">
		@Html.MaterialPasswordFor(x => x.OldPassword, 1, "current-password", new Dictionary<string, object>() {{"id", "old-pwd"}}, includePlaceholder: false)
		<span class="bar"></span>
		@Html.NoSelectLaberFor(x => x.OldPassword)
		@Html.ValidationMessageFor(x => x.OldPassword)
	</div>
	<div class="form-group">
		@Html.MaterialPasswordFor(x => x.Password, 2, "new-password", new Dictionary<string, object>() { { "id", "new-pwd" } }, includePlaceholder: false)
		<span class="bar"></span>
		@Html.NoSelectLaberFor(x => x.Password)
		@Html.ValidationMessageFor(x => x.Password)
	</div>
	<div class="form-group">
		@Html.MaterialPasswordFor(x => x.RepeatPassword, 3, "new-password", includePlaceholder: false)
		<span class="bar"></span>
		@Html.NoSelectLaberFor(x => x.RepeatPassword)
		@Html.ValidationMessageFor(x => x.RepeatPassword)
	</div>
	<div class="form-group d-flex justify-content-between">
		<button type="reset" class="btn btn-secondary">
			Zrušit
		</button>
		<button type="submit" class="btn btn-primary">
			Změnit
		</button>
	</div>
}