@model IEnumerable<DataAccess.Models.Achievement>
@{
	ViewBag.Title = "Achievementy";
	Layout = "~/Areas/App/Views/Shared/_LayoutMenu.cshtml";
}

<div class="row">
	<div class="col">
		<div class="card">
			<div class="card-body">
				<div class="row">
					@foreach (var ent in Model) {
						<div class="col-xl-3 col-lg-4 col-md-6">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-4">
											<img src="@Url.Content("~/assets/images/gallery/chair.jpg")" alt="user" width="80" height="80" />
										</div>
										<div class="col">
											<h4>@ent.Title</h4>
											<small>@ent.Description</small>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>