@model IEnumerable<ZolikyWeb.Areas.App.Models.Achievement.AchievementModel>
@{
	ViewBag.Title = "Achievementy";
	Layout = "~/Areas/App/Views/Shared/_LayoutMenu.cshtml";
}

<div class="row NoSelectAll">
	<div class="col">
		<div class="card">
			<div class="card-body">
				<div class="row">
					@foreach (var ent in Model) {
						<div class="col-xl-3 col-lg-4 col-md-6">
							<div class="card" style="@ent.CardStyle">
								<div class="card-body">
									<div class="row">
										<div class="col-4">
											<img src="@Url.Content("~/Content/Images/SVGs/Trophy.svg")" alt="user" width="80" height="80" style="@ent.ImageStyle" />
										</div>
										<div class="col">
											<h4>@ent.Title</h4>
											<small>@ent.Description</small>
											@if (ent.IsUnlocked) {
												<br/>
												<small>Datum získání: @(ent.When?.ToString("dd.MM.yyyy"))</small>
											}
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>