@model ZolikyWeb.Areas.Admin.Models.SendNotificationModel
@{
	ViewBag.Title = "Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dashboard</h2>

@using (Html.BeginForm("SendNotification", "Admin", new {Area = "Admin"}, FormMethod.Post)) {
	@Html.AntiForgeryToken()
	<div class="form-group">
		@Html.LabelFor(x => x.ToId)
		@Html.TextBoxFor(x => x.ToId)
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.ZolikId)
		@Html.TextBoxFor(x => x.ZolikId)
	</div>

	<button type="submit">Odeslat</button>
}